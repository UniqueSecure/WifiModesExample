<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RobotoCondensed</item>
        <item name="android:buttonStyle">@style/RobotoCondensedbtn</item>
    </style>


    <style name="RobotoCondensed" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="RobotoCondensedbtn" parent="android:Widget.Button">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>


    <style name="MainStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="subTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorTextSubtitle</item>
    </style>

    <style name="txtLabels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:ems">6</item>
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <style name="txtLabelscard2">
        <item name="android:ems">6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorButton</item>
    </style>

    <style name="txtFields">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:ems">6</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textColor">@color/colorTextSubtitle</item>
    </style>

    <style name="BtnStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorButton</item>
    </style>

    <style name="confirmationTexts">
        <item name="android:layout_width">200sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorButton</item>
    </style>




</resources>
